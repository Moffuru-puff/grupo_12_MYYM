<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %> 

<body class="forms-form">
    <main>
        <div class="contain3r">
        <div class="form-container">
            <div style="order: 1" class="logo-container">
                <a href="/"><img class="myym" src="/img/logo-form.png" alt=""></a>
              </div>
            <div style="order: -1" class="form-content">
                <form action="/register" method="POST" >
                <div class="iniciar">
                    <h2>
                        Registrarse
                    </h2>
                    <h3>
                        ¿Ya tienes una cuenta? <a class="a" href="/login">Inicia sesion</a>
                    </h3>
                </div>
                <div class="form">
                    <div class="input-container">
                        <input class="input-style" type="text" name="usuario" value="<%= locals.old && old.usuario %>" placeholder="usuario">
                        <% if(locals.errors && errors.usuario) { %>
                        <span class="error-message"><%= errors.usuario.msg %></span>
                        <% } %>
                    </div>
                    <div class="form">
                        <div class="input-container">
                            <input class="input-style" type="email" name="email" value="<%= locals.old && old.email %>" placeholder="email">
                            <% if(locals.errors && errors.email) { %>
                                <span class="error-message"><%= errors.email.msg %></span>
                                <% } %>                        
                            </div>
                        <div class="form">
                            <div class="input-container">
                                <input class="input-style" type="password" name="password" value="<%= locals.old && old.password %>" placeholder="contraseña">
                                <% if(locals.errors && errors.password) { %>
                                    <span class="error-message"><%= errors.password.msg %></span>
                                    <% } %>                            
                                </div>
                            <div class="form">
                                <div class="input-container">
                                    <input class="input-style" type="password" name="repassword" value="<%= locals.old && old.repassword %>" placeholder="confirmar contraseña">
                                    <% if(locals.errors && errors.repassword) { %>
                                        <span class="error-message"><%= errors.repassword.msg %></span>
                                        <% } %>                                
                                    </div>
                                <div>
                                    <button id="btn-submit" type="submit" style="color: white" class="btn btn-submit">Crear cuenta</button>
                                </div>
                            </div>
                        </div>
                    </div>
            </form>
        </div>
        </div>
    </main>
</body>

</html>