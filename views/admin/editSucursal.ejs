<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>
        <!-- header para el administrador -->
        <%- include('../partials/headerAdmin') %>

            <main class="main-admin">
                <form action="/admin/sucursals/edit/<%= sucursal.id %>?_method=PUT " method="POST">
                
                <div class="cargaDeFotos">
                    <div class="volver">
                        <a href="/admin/sucursals">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </div>
                <section class="charge">
                    <h2>Editar sucursal</h2>
                    <div class="freight">
                        <div class="formAdmin">
                            <div class="flex">
                                <label for="location">Localidad</label>
                                <div class="input">
                                    <input type="text" value="<%= sucursal.location %>" id="location" name="location" />
                                </div>

                                <label for="direction">Dirección</label>
                                <div class="input">
                                    <input type="text" value="<%= sucursal.direction %>"  id="location" name="direction" />
                                </div>

                                <label for="telephone">Teléfono</label>
                                <div class="input">
                                    <input type="text" name="telephone" id="telephone" value="<%= sucursal.telephone %>"  />
                                </div>
                            </div>
                            <div class="flex">

                                <label for="schedule">Horarios</label>
                                <div class="input">
                                    <textarea name="schedule" id="schedule" cols="30" rows="10"
                                    value="<%= sucursal.schedule %>" ></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="btn-publish">
                        <button class="publish" type="submit">Cancelar</button>
                        <button class="publish" type="submit">Guardar</button>
                    </div>

                </section>
                </form>
            </main>
    </body>

</html>