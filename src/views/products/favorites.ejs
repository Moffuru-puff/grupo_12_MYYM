<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>

        <!-- Comienzo de header -->
        <%- include('../partials/header.ejs') %>
            <!-- Fin del header -->

            <!------cart items details------->



            <div class="fav-container cart-page">
                <div class="mi_carrito">
                    <h3>Mis Favoritos</h3>

                    <button class="btn-vaciar">Vaciar Favoritos</button>
                </div>
                <table class="favorites">
                    <thead>
                        <tr>
                            <th class="favProduct">Producto</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if (productsFavorites.length > 0) { %>
                            <% productsFavorites.forEach( product => { %>
                                <% console.log(product) %> 
                                <tr>
                                   <td>
                                       <div class="fav-info">
                                           <a href=""> <img src="/img/Productos Gamers/<%- producto.productimage[0]?.url %>" alt="<%- producto.name %>" /></a>
                                           <div>
                                               <p>
                                               <h4> <%- producto.name%></h4>
                                               </p>
                                               <% if (producto.discount !== 0) { %>
                                                   <div class="withDiscount">
                                                     <small>$<%- producto.price %></small>
                                                     <span>
                                                       <%- producto.discount !== 0 ? `${producto.discount}% OFF` : '' %>
                                                     </span>
                                                     </div>
                                                     <h3>$<%- toThousand(producto.price - producto.price * producto.discount / 100) %>
                                                     </h3>
                                                   
                                                   <% } else { %>
                                                     <h3>
                                                       $<%- toThousand(producto.price) %>
                                                     </h3>
                             
                                                     <% } %>
                                            <br>
                                               <a href="" id="<%- producto.id %>" ><i style="margin-right: 10px;" class="fas fa-trash"></i>Eliminar</a>
                                           </div>
                                       </div>
                                   </td>
                               </tr>
                                <% }) %> 
                         
                        <% } else { %>
                            <tr>
                                <td>
                                    <div class="dBlock">
                                    <h2 style="color: tomato; text-align: center;">
                                        No hay productos en tu lista de favoritos
                                    </h2>
                                    <div style="height: 250px;"></div>
                                </div> 
                                </td>
                               
                            </tr>
                                
                            <% } %>
                       
                    </tbody>
                    
                </table>
                <div class="jccenter">
                    <div class="btn-seguirComprando">
                    <a href="/"><button class="btn-seguirComprando">Seguir Comprando</button></a>
                </div>
                </div>
                
            </div>
            <!-- Comienzo de footer -->
            <%- include('../partials/footer.ejs') %>
                <!-- Fin del footer -->

    </body>

</html>