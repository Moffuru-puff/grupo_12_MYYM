<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>
        <!-- header para el administrador -->
        <%- include('../partials/header') %>

            <main class="main-admin">
                <form action="/admin/sucursals/edit/<%= sucursal.id %>?_method=PUT " method="POST">
                
                <div>
                    <div class="volver">
                        <a href="/admin/sucursals">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </div>
                <section class="charge">
                    <h2>Editar sucursal</h2>
                    <div class="freight">
                        <div class="formAdmin">
                            <div class="flex">
                                <label for="location">Localidad</label>
                                <div class="input">
                                    <input type="text" value="<%= sucursal.Address.state %>" id="location" name="location" />
                                </div>

                                <label for="direction">Dirección</label>
                                <div class="input">
                                    <input type="text" value="<%= sucursal.Address.address %>"  id="location" name="direction" />
                                </div>

                                <label for="telephone">Teléfono</label>
                                <div class="input">
                                    <input type="text" name="telephone" id="telephone" value="<%= sucursal.telephone %>"  />
                                </div>

                                <label for="postalCode">Código Postal</label>
                                <div class="input">
                                    <input type="number" name="postalCode" id="postalCode" placeholder="1629" value="<%- sucursal.Address.postalCode %>" />
                                    <% if(locals.errors && errors.postalCode) { %>
                                        <small class="text-danger">
                                            <%= errors.postalCode.msg %>
                                        </small>
                                        <% } %>
                                    </div>
                            </div>
                            <div class="flex"> 
                                <label for="schedule">Horarios</label>
                                <div class="input">
                                    <textarea name="schedule" id="schedule" cols="30" rows="12"
                                    value="<%= sucursal.schedule %>" ><%= sucursal.schedule %></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="btn-publish">
                        <button class="publish" type="button"><a href="../">Cancelar</a></button>
                        <button class="publish" type="submit">Guardar</button>
                    </div>

                </section>
                </form>
            </main>
    </body>

</html>