<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>
        <!-- header para el administrador -->
        <%- include('../partials/header') %>

            <main class="main-admin">
                <form action="/admin/users/edit/<%= user.id %>?_method=PUT " method="POST">

                <div>
                    <div class="volver">
                        <a href="/admin/userList">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </div>
                <section class="charge">
                    <h2>Editar Usuario</h2>
                    <div class="freight">
                        <div class="formAdmin">
                            <div class="flex">
                                <label for="usuario">Usuario</label>
                                <div class="input">
                                    <input type="text" value="<%= user.user %>" id="usuario" name="user" />
                                </div>

                                <label for="name">Nombre</label>
                                <div class="input">
                                    <input type="text" value="<%= user.name %>" id="name" name="name" />
                                </div>

                                <label for="lasname">Apellido</label>
                                <div class="input">
                                    <input type="text" value="<%= user.lastname %>" id="lasname" name="lastname" />
                                </div>

                                <label for="telephone">Teléfono</label>
                                <div class="input">
                                    <input type="text" name="telephone" id="telephone" value="<%= user.telephone %>" />
                                </div>

                                <label for="direction">Dirección</label>
                                <div class="input">
                                    <input type="text" value="<%= user.address %>" id="location"
                                        name="address" />
                                </div>

                               
                            </div>
                            <div class="flex">

                                <label for="province">Provincia</label>
                                <div class="input">
                                    <input type="text" value="<%= user.province %>" id="province" name="province" />
                                </div>
                                
                                <label for="email">E-mail</label>
                                <div class="input">
                                    <input type="email" value="<%= user.email %>" id="email" name="email" />
                                </div>

                                <label for="password">Contraseña</label>
                                <div class="input">
                                    <input type="password" value="<%= user.password %>" id="password"
                                        name="password" />
                                </div>

                                <label for="rol">Rol</label>
                                <div class="input">
                                    <select name="rol" id="rol">
                                        <option selected>Selecionar rol</option>
                                        <option value="0">Administrador</option>
                                        <option value="1" >Usuario</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="btn-publish">
                        <button class="publish" type="button"><a href="/admin/userList">Cancelar</a></button>
                        <button class="publish" type="submit">Guardar</button>
                    </div>

                </section>
            </form>
            </main>
    </body>

</html>