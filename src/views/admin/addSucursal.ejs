<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>
        <!-- header para el administrador -->
        <%- include('../partials/header') %>

            <main class="main-admin">
                <form action="/admin/sucursal/create" method="POST">
                <div>
                    <div class="volver">
                        <a href="/admin/sucursals">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </div>
                </div>
                <section class="charge">
                    <h2>Agregar nueva sucursal</h2>
                    <div class="freight">
                        <div class="formAdmin">
                            <div class="flex">
                                <label for="location">Localidad</label>
                                <div class="input">
                                    <input type="text" placeholder="Pilar" id="location" name="location" value="<%= locals.old && old.location %>" />
                                    <% if(locals.errors && errors.location) { %>
                                        <small class="text-danger">
                                            <%= errors.location.msg %>
                                        </small>
                                        <% } %>
                                </div>

                                <label for="direction">Dirección</label>
                                <div class="input">
                                    <input type="text" placeholder="Calle falsa 123" id="location" name="direction" value="<%= locals.old && old.direction %>" />
                                    <% if(locals.errors && errors.direction) { %>
                                        <small class="text-danger">
                                            <%= errors.direction.msg %>
                                        </small>
                                        <% } %>
                                </div>

                                <label for="telephone">Teléfono</label>
                                <div class="input">
                                    <input type="text" name="telephone" id="telephone" placeholder="0800-0000" value="<%= locals.old && old.telephone %>" />
                                    <% if(locals.errors && errors.telephone) { %>
                                        <small class="text-danger">
                                            <%= errors.telephone.msg %>
                                        </small>
                                        <% } %>
                                </div>

                                <label for="postalCode">Código Postal</label>
                                <div class="input">
                                    <input type="number" name="postalCode" id="postalCode" placeholder="1629" value="<%= locals.old && old.postalCode %>" />
                                    <% if(locals.errors && errors.postalCode) { %>
                                        <small class="text-danger">
                                            <%= errors.postalCode.msg %>
                                        </small>
                                        <% } %>
                                </div>
                            </div>
                            <div class="flex">

                                <label for="schedule">Horarios</label>
                                <div class="input">
                                    <textarea name="schedule" id="schedule" cols="30" rows="10"
                                        placeholder="Lunes-Jueves: 9:00 AM - 5:30 PM"><%= locals.old && old.schedule %></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="btn-publish">
                        <button class="publish" type="submit">Guardar</button>
                    </div>

                </section>
            </form>
            </main>
    </body>

</html>